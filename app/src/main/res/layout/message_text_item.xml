<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageTextItem_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_4sdp"
        android:background="@drawable/background_input"
        android:orientation="vertical">

        <TextView
            android:id="@+id/messageTextItem_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit. A, assumenda blanditiis consectetur eaque enim explicabo impedit in ipsum laudantium, molestias nemo, obcaecati odio perferendis quas quia reprehenderit tempore ullam vel?"
            android:textColor="@color/text_muted"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/messageTextItem_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_4sdp"
                android:text="12:00"
                android:textColor="@color/text_muted"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/messageTextItem_viewed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã xem"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_4sdp"
        android:textColor="@color/text_muted"
        android:textSize="@dimen/_10sdp" />
</LinearLayout>